<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/day_height"
            android:orientation="horizontal"
            android:background="@color/meizu_red">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="日"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="一"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="二"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="三"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="四"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="五"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/day_height"
                android:text="六"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

        <com.example.lovecalendar.view.KCalendar
            android:id="@+id/window_calendar"
            android:layout_width="match_parent"
            android:layout_height="360dp">

        </com.example.lovecalendar.view.KCalendar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/meizu_grey" />

        <TextView
            android:id="@+id/createNote"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/meizu_newwhite"
            android:gravity="center"
            android:text="新建事件"
            android:textColor="@color/meizu_red"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/meizu_grey" />
    </LinearLayout>

</RelativeLayout>
